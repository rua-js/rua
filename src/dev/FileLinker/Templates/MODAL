import * as React from 'react'
import { connect } from 'react-redux'
import { WhiteSpace, WingBlank } from 'antd-mobile'
import { StyleSheet, View, Image, Button, Text } from 'react-native'
import { actions } from 'rua-dva'
import { default as Modal } from 'react-native-modal'

import {
  TopActionBar,
} from '../../components/Modal'
import { default as R } from '../../rua'
import { TouchableView } from '../../components/General'

class ${NAME} extends React.Component<Props, never> {
  static defaultProps = {
    onClose: R.const.noop,
  }

  handleClose = () => {
    const { onClose } = this.props
    onClose()
  }

  render() {
    const { visible } = this.props
    return (
      <Modal
        isVisible={visible}
        style={styles.container}
        onBackdropPress={this.handleClose}
        onBackButtonPress={this.handleClose}
        animationIn={'zoomInUp'}
        animationOut={'fadeOut'}
      >
        <View style={styles.content}>
          <TopActionBar
            onClose={this.handleClose}
          />
          <Text>${NAME}</Text>
        </View>
      </Modal>
    )
  }
}

const styles = StyleSheet.create({
  container: {
    flexDirection: 'row',
    alignItems: 'center',
    justifyContent: 'center',
  },
  content: {
    width: '95%',
    borderRadius: R.style.radius.modal,
    overflow: 'hidden',
    backgroundColor: R.color.white,
    alignItems: 'center',
  },
})

interface Props {
  visible: boolean,
  onClose?: () => void | Function
}

export default ${NAME}
